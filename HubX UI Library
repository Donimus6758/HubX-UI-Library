        -- KEYBIND
        function tab:CreateKeybind(args)
            args = args or {}
            local txt = args.Text or "Keybind"
            local def = args.Default or Enum.KeyCode.F
            local hold = args.Hold or false
            local cb = args.Callback or function() end

            local card = Instance.new("Frame")
            card.BackgroundColor3 = Color3.fromRGB(18, 18, 24)
            card.BorderSizePixel = 0
            card.Size = UDim2.new(1, -4, 0, 40)
            card.Parent = page

            local corner = Instance.new("UICorner")
            corner.CornerRadius = UDim.new(0, 8)
            corner.Parent = card

            local stroke = Instance.new("UIStroke")
            stroke.Thickness = 1
            stroke.Color = Color3.fromRGB(40, 40, 50)
            stroke.Parent = card

            local label = Instance.new("TextLabel")
            label.BackgroundTransparency = 1
            label.Position = UDim2.new(0, 10, 0, 0)
            label.Size = UDim2.new(0.5, -10, 1, 0)
            label.Font = Enum.Font.Gotham
            label.Text = txt
            label.TextSize = 16
            label.TextColor3 = Color3.fromRGB(210, 210, 220)
            label.TextXAlignment = Enum.TextXAlignment.Left
            label.Parent = card

            local keyButton = Instance.new("TextButton")
            keyButton.AnchorPoint = Vector2.new(1, 0.5)
            keyButton.Position = UDim2.new(1, -10, 0.5, 0)
            keyButton.Size = UDim2.new(0, 130, 0, 26)
            keyButton.BackgroundColor3 = Color3.fromRGB(12, 12, 18)
            keyButton.AutoButtonColor = false
            keyButton.Font = Enum.Font.Gotham
            keyButton.TextSize = 14
            keyButton.TextColor3 = Color3.fromRGB(193, 193, 193)
            keyButton.Parent = card

            local kbCorner = Instance.new("UICorner")
            kbCorner.CornerRadius = UDim.new(0, 6)
            kbCorner.Parent = keyButton

            local kbStroke = Instance.new("UIStroke")
            kbStroke.Thickness = 1
            kbStroke.Color = Color3.fromRGB(40, 40, 50)
            kbStroke.Parent = keyButton

            local function keyName(k)
                local s = UserInputService:GetStringForKeyCode(k)
                if s == nil or s == "" then s = tostring(k) end
                return s
            end

            keyButton.Text = "[ " .. keyName(def) .. " ]"

            local awaiting = false
            local currentKey = def

            makeClickRipple(keyButton)
            addConnection(keyButton.MouseButton1Click, function()
                awaiting = true
                keyButton.Text = "[ Press key... ]"
            end)

            addConnection(UserInputService.InputBegan, function(input, gp)
                if gp then return end
                if awaiting then
                    awaiting = false
                    if input.KeyCode ~= Enum.KeyCode.Unknown then
                        currentKey = input.KeyCode
                        keyButton.Text = "[ " .. keyName(currentKey) .. " ]"
                    else
                        keyButton.Text = "[ None ]"
                    end
                else
                    if input.KeyCode == currentKey then
                        if hold then
                            cb(true)
                        else
                            cb()
                        end
                    end
                end
            end)

            if hold then
                addConnection(UserInputService.InputEnded, function(input, gp)
                    if gp then return end
                    if input.KeyCode == currentKey then
                        cb(false)
                    end
                end)
            end

            safeUpdateCanvas()

            local api = {}
            function api:SetKey(keyCode)
                currentKey = keyCode
                keyButton.Text = "[ " .. keyName(currentKey) .. " ]"
            end
            return api
        end

        -- COLOR PICKER
        function tab:CreateColorPicker(args)
            args = args or {}
            local txt = args.Text or "Color Picker"
            local def = args.Default or Color3.new(1, 1, 1)
            local cb = args.Callback or function() end

            local card = Instance.new("Frame")
            card.BackgroundColor3 = Color3.fromRGB(18, 18, 24)
            card.BorderSizePixel = 0
            card.Size = UDim2.new(1, -4, 0, 100)
            card.Parent = page

            local corner = Instance.new("UICorner")
            corner.CornerRadius = UDim.new(0, 8)
            corner.Parent = card

            local stroke = Instance.new("UIStroke")
            stroke.Thickness = 1
            stroke.Color = Color3.fromRGB(40, 40, 50)
            stroke.Parent = card

            local label = Instance.new("TextLabel")
            label.BackgroundTransparency = 1
            label.Position = UDim2.new(0, 10, 0, 0)
            label.Size = UDim2.new(1, -60, 0, 20)
            label.Font = Enum.Font.Gotham
            label.Text = txt
            label.TextSize = 16
            label.TextColor3 = Color3.fromRGB(210, 210, 220)
            label.TextXAlignment = Enum.TextXAlignment.Left
            label.Parent = card

            local preview = Instance.new("Frame")
            preview.AnchorPoint = Vector2.new(1, 0)
            preview.Position = UDim2.new(1, -10, 0, 6)
            preview.Size = UDim2.fromOffset(32, 32)
            preview.BackgroundColor3 = def
            preview.BorderSizePixel = 0
            preview.Parent = card

            local prevCorner = Instance.new("UICorner")
            prevCorner.CornerRadius = UDim.new(0, 6)
            prevCorner.Parent = preview

            local channels = {"R","G","B"}
            local values = {
                math.floor(def.R * 255 + 0.5),
                math.floor(def.G * 255 + 0.5),
                math.floor(def.B * 255 + 0.5)
            }

            local function applyColor()
                local c = Color3.fromRGB(values[1], values[2], values[3])
                preview.BackgroundColor3 = c
                cb(c)
            end

            local yStart = 30
            for i, ch in ipairs(channels) do
                local y = yStart + (i - 1) * 20

                local chLabel = Instance.new("TextLabel")
                chLabel.BackgroundTransparency = 1
                chLabel.Position = UDim2.new(0, 10, 0, y)
                chLabel.Size = UDim2.new(0, 16, 0, 16)
                chLabel.Font = Enum.Font.Gotham
                chLabel.Text = ch
                chLabel.TextSize = 14
                chLabel.TextColor3 = Color3.fromRGB(170, 170, 180)
                chLabel.TextXAlignment = Enum.TextXAlignment.Left
                chLabel.Parent = card

                local bar = Instance.new("Frame")
                bar.BackgroundColor3 = Color3.fromRGB(10, 10, 14)
                bar.BorderSizePixel = 0
                bar.Position = UDim2.new(0, 30, 0, y)
                bar.Size = UDim2.new(1, -70, 0, 14)
                bar.Parent = card

                local barCorner = Instance.new("UICorner")
                barCorner.CornerRadius = UDim.new(0, 7)
                barCorner.Parent = bar

                local fill = Instance.new("Frame")
                fill.BorderSizePixel = 0
                fill.Size = UDim2.new(values[i]/255, 0, 1, 0)
                fill.Parent = bar

                if ch == "R" then
                    fill.BackgroundColor3 = Color3.fromRGB(255, 80, 80)
                elseif ch == "G" then
                    fill.BackgroundColor3 = Color3.fromRGB(80, 255, 80)
                else
                    fill.BackgroundColor3 = Color3.fromRGB(80, 150, 255)
                end

                local fillCorner = Instance.new("UICorner")
                fillCorner.CornerRadius = UDim.new(0, 7)
                fillCorner.Parent = fill

                local dragBtn = Instance.new("TextButton")
                dragBtn.BackgroundTransparency = 1
                dragBtn.Size = UDim2.new(1, 0, 1, 0)
                dragBtn.Text = ""
                dragBtn.Parent = bar

                local dragging = false
                local dragInput

                local function setFromX(pos)
                    local absPos = bar.AbsolutePosition.X
                    local sizeX = bar.AbsoluteSize.X
                    local rel = math.clamp((pos - absPos) / sizeX, 0, 1)
                    values[i] = math.floor(rel * 255 + 0.5)
                    fill.Size = UDim2.new(rel, 0, 1, 0)
                    applyColor()
                end

                addConnection(dragBtn.InputBegan, function(input)
                    if input.UserInputType == Enum.UserInputType.MouseButton1
                    or input.UserInputType == Enum.UserInputType.Touch then
                        dragging = true
                        dragInput = input
                        setFromX(input.Position.X)
                        addConnection(input.Changed, function()
                            if input.UserInputState == Enum.UserInputState.End then
                                dragging = false
                                dragInput = nil
                            end
                        end)
                    end
                end)

                addConnection(dragBtn.InputChanged, function(input)
                    if input.UserInputType == Enum.UserInputType.MouseMovement
                    or input.UserInputType == Enum.UserInputType.Touch then
                        dragInput = input
                    end
                end)

                addConnection(UserInputService.InputChanged, function(input)
                    if input == dragInput and dragging then
                        setFromX(input.Position.X)
                    end
                end)
            end

            applyColor()
            safeUpdateCanvas()

            local api = {}
            function api:Set(color)
                values[1] = math.floor(color.R * 255 + 0.5)
                values[2] = math.floor(color.G * 255 + 0.5)
                values[3] = math.floor(color.B * 255 + 0.5)
                applyColor()
            end
            return api
        end

        -- VIDEO
        function tab:CreateVideo(args)
            args = args or {}
            local videoId = args.Video or "rbxassetid://0"
            local loop = args.Loop or false
            local height = args.Height or 200

            local card = Instance.new("Frame")
            card.BackgroundColor3 = Color3.fromRGB(18, 18, 24)
            card.BorderSizePixel = 0
            card.Size = UDim2.new(1, -4, 0, height)
            card.Parent = page

            local corner = Instance.new("UICorner")
            corner.CornerRadius = UDim.new(0, 8)
            corner.Parent = card

            local stroke = Instance.new("UIStroke")
            stroke.Thickness = 1
            stroke.Color = Color3.fromRGB(40, 40, 50)
            stroke.Parent = card

            local videoFrame = Instance.new("VideoFrame")
            videoFrame.BackgroundColor3 = Color3.fromRGB(0, 0, 0)
            videoFrame.BorderSizePixel = 0
            videoFrame.Size = UDim2.new(1, -16, 1, -48)
            videoFrame.Position = UDim2.new(0, 8, 0, 8)
            videoFrame.Video = videoId
            videoFrame.Looped = loop
            videoFrame.Parent = card

            local vCorner = Instance.new("UICorner")
            vCorner.CornerRadius = UDim.new(0, 6)
            vCorner.Parent = videoFrame

            local controls = Instance.new("Frame")
            controls.BackgroundTransparency = 1
            controls.Size = UDim2.new(1, -16, 0, 32)
            controls.Position = UDim2.new(0, 8, 1, -36)
            controls.Parent = card

            local playPause = Instance.new("TextButton")
            playPause.BackgroundColor3 = Color3.fromRGB(12, 12, 18)
            playPause.Size = UDim2.new(0, 40, 1, 0)
            playPause.Text = "▶"
            playPause.Font = Enum.Font.GothamBold
            playPause.TextSize = 18
            playPause.TextColor3 = Color3.fromRGB(220, 220, 230)
            playPause.Parent = controls

            local ppCorner = Instance.new("UICorner")
            ppCorner.CornerRadius = UDim.new(0, 6)
            ppCorner.Parent = playPause

            local stopBtn = Instance.new("TextButton")
            stopBtn.BackgroundColor3 = Color3.fromRGB(12, 12, 18)
            stopBtn.Size = UDim2.new(0, 40, 1, 0)
            stopBtn.Position = UDim2.new(0, 44, 0, 0)
            stopBtn.Text = "■"
            stopBtn.Font = Enum.Font.GothamBold
            stopBtn.TextSize = 18
            stopBtn.TextColor3 = Color3.fromRGB(220, 220, 230)
            stopBtn.Parent = controls

            local stopCorner = Instance.new("UICorner")
            stopCorner.CornerRadius = UDim.new(0, 6)
            stopCorner.Parent = stopBtn

            local loopBtn = Instance.new("TextButton")
            loopBtn.BackgroundColor3 = Color3.fromRGB(12, 12, 18)
            loopBtn.Size = UDim2.new(0, 70, 1, 0)
            loopBtn.Position = UDim2.new(1, -74, 0, 0)
            loopBtn.Text = loop and "Loop: ON" or "Loop: OFF"
            loopBtn.Font = Enum.Font.Gotham
            loopBtn.TextSize = 14
            loopBtn.TextColor3 = loop and accent or Color3.fromRGB(170, 170, 180)
            loopBtn.Parent = controls

            local loopCorner = Instance.new("UICorner")
            loopCorner.CornerRadius = UDim.new(0, 6)
            loopCorner.Parent = loopBtn

            makeClickRipple(playPause)
            makeClickRipple(stopBtn)
            makeClickRipple(loopBtn)

            local isPlaying = false

            local function refreshLoop()
                videoFrame.Looped = loop
                loopBtn.Text = loop and "Loop: ON" or "Loop: OFF"
                loopBtn.TextColor3 = loop and accent or Color3.fromRGB(170, 170, 180)
            end
            refreshLoop()

            addConnection(playPause.MouseButton1Click, function()
                if isPlaying then
                    videoFrame:Pause()
                    isPlaying = false
                    playPause.Text = "▶"
                else
                    videoFrame:Play()
                    isPlaying = true
                    playPause.Text = "⏸"
                end
            end)

            addConnection(stopBtn.MouseButton1Click, function()
                videoFrame:Stop()
                isPlaying = false
                playPause.Text = "▶"
            end)

            addConnection(loopBtn.MouseButton1Click, function()
                loop = not loop
                refreshLoop()
            end)

            safeUpdateCanvas()

            local api = {}
            function api:Set(id)
                videoFrame.Video = id
                isPlaying = false
                playPause.Text = "▶"
            end
            function api:Play()
                videoFrame:Play()
                isPlaying = true
                playPause.Text = "⏸"
            end
            function api:Pause()
                videoFrame:Pause()
                isPlaying = false
                playPause.Text = "▶"
            end
            function api:Stop()
                videoFrame:Stop()
                isPlaying = false
                playPause.Text = "▶"
            end
            function api:SetSize(size)
                card.Size = size
                safeUpdateCanvas()
            end
            function api:SetLoop(v)
                loop = v and true or false
                refreshLoop()
            end

            return api
        end

        return tab
    end

    return window
end

return HubX
